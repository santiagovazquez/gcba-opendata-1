$(document).ready(function(){

    _.templateSettings = {
        interpolate: /\{\{\=(.+?)\}\}/g,
        evaluate: /\{\{(.+?)\}\}/g
    };

    StatusBar.init();
    Map.init();
    Searchbox.init(Map);

    $('#introduction-modal').modal('show');

    $('html').ajaxError(function(){
        $('#loading').hide();
        $('.navbar-search').show();
        StatusBar.showErrorMessage("Ooops, hubo un error en la comunicacion con el servidor. Proba nuevamente mas tarde.");
    });
});